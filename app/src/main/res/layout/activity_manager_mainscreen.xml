<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:id="@+id/drawer_layout"
    tools:context=".Manager.manager_mainscreen">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
  <ImageView
      android:id="@+id/menu"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/menu"
      android:layout_margin="20dp"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:weightSum="2"
      android:orientation="vertical"
      android:gravity="bottom"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        >
      <LinearLayout
          android:layout_width="140dp"
          android:layout_height="140dp"
          android:background="@drawable/roundedbutton"
          android:layout_marginRight="15dp"
          android:orientation="vertical"
          android:paddingBottom="20dp"
          android:paddingTop="20dp">
        <ImageButton
            android:id="@+id/employee_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F1BF46"
            android:src="@drawable/employee"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee List"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="140dp"
          android:layout_height="140dp"
          android:background="@drawable/roundedbutton"
          android:layout_marginRight="15dp"
          android:orientation="vertical"
          android:paddingBottom="20dp"
          android:paddingTop="20dp">
        <ImageButton
            android:id="@+id/current_tasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F1BF46"
            android:src="@drawable/emplist"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Tasks"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            />
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        >
      <LinearLayout
          android:layout_width="140dp"
          android:layout_height="140dp"
          android:background="@drawable/roundedbutton"
          android:layout_marginRight="15dp"
          android:orientation="vertical"
          android:paddingBottom="20dp"
          android:paddingTop="20dp">
        <ImageButton
            android:id="@+id/task_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F1BF46"
            android:src="@drawable/taskhistory"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task History"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="140dp"
          android:layout_height="140dp"
          android:background="@drawable/roundedbutton"
          android:layout_marginRight="15dp"
          android:orientation="vertical"
          android:paddingBottom="20dp"
          android:paddingTop="20dp">
        <ImageButton
            android:id="@+id/create_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F1BF46"
            android:src="@drawable/addtask"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Task"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
  </LinearLayout>
  <com.google.android.material.navigation.NavigationView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/man_navigation"
      app:menu="@menu/manager_menu"
      android:layout_gravity="start"
      app:headerLayout="@layout/drawer_header"
      />
  </androidx.drawerlayout.widget.DrawerLayout>